# Web Dockerfile
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json pnpm-lock.yaml* .npmrc* ./ 2>/dev/null || true
COPY packages/web/package.json packages/web/package.json
RUN npm i -g pnpm && pnpm install --filter web...

FROM node:20-alpine AS builder
WORKDIR /app
COPY . .
RUN npm i -g pnpm && pnpm build:web

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
COPY --from=builder /app/packages/web/.next /app/packages/web/.next
COPY --from=builder /app/packages/web/public /app/packages/web/public
COPY --from=builder /app/packages/web/next.config.mjs /app/packages/web/next.config.mjs
COPY --from=builder /app/packages/web/package.json /app/packages/web/package.json
COPY --from=builder /app/node_modules /app/node_modules
EXPOSE 3000
CMD ["pnpm", "--filter", "web", "start"]
